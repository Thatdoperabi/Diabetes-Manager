<HistoryScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        ScrollView:
            MDBoxLayout:  # This becomes the single direct child of the ScrollView
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                BoxLayout:
                    id: graph_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 10
                    spacing: 10

                MDBoxLayout:
                    id: history_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 0
                    padding: 0